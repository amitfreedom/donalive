<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="@dimen/d12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_images"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/pk2"/>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_images"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AMit Kumar"
                style="@style/HeaderTextStyle"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How are you?"
                style="@style/NormalTextStyle"
                android:textColor="@color/light_gray"/>

        </LinearLayout>

        <TextView
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09:30 AM"
            android:layout_alignParentRight="true"
            style="@style/NormalTextStyle"
            android:textColor="@color/light_gray"/>

    </RelativeLayout>

    <View
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/very_light"/>

</LinearLayout>