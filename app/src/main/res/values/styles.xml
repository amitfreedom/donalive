<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyTabStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/app_color1</item>
        <item name="tabIndicatorHeight">2.5dp</item>
        <item name="android:elevation">2dp</item>
        <item name="tabIconTint">@color/white</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextColor">@color/light_gray</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="text15sp" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="text13sp" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="text17sp" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="NotificationUIText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowColor">@color/white</item>
    </style>

</resources>